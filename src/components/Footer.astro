---
const today = new Date();
---

<footer>
	<div class="footer-inner container">
		<div class="footer-brand">
			<img src="/assets/logo.png" alt="Stamp 731 Notary" width="40" height="40" />
			<span class="footer-name">Stamp 731 Notary</span>
		</div>

		<nav class="footer-nav" aria-label="Footer navigation">
			<a href="/">Home</a>
			<a href="/why-mallory">Why Mallory</a>
			<a href="/contact">Contact</a>
		</nav>

		<div class="footer-contact">
			<a href="tel:+17319991234">(731) 415-0708</a>
			<a href="mailto:mallory@stamp731notary.com">mallory@stamp731notary.com</a>
		</div>
	</div>

	<div class="footer-bottom">
		<p>&copy; {today.getFullYear()} Stamp 731 Notary. All rights reserved.</p>
	</div>
</footer>

<style>
	footer {
		background: var(--black);
		color: var(--cream-dark);
		padding-top: 3rem;
	}

	.footer-inner {
		display: flex;
		flex-wrap: wrap;
		gap: 2rem;
		justify-content: space-between;
		align-items: flex-start;
		padding-bottom: 2.5rem;
		border-bottom: 1px solid rgba(201, 168, 76, 0.3);
	}

	.footer-brand {
		display: flex;
		align-items: center;
		gap: 0.6rem;
	}
	.footer-brand img {
		border-radius: 4px;
		flex-shrink: 0;
	}
	.footer-name {
		font-weight: 700;
		color: var(--gold);
		font-size: 1.05rem;
	}

	.footer-nav {
		display: flex;
		gap: 1.5rem;
		flex-wrap: wrap;
	}
	.footer-nav a {
		color: var(--cream-dark);
		text-decoration: none;
		font-size: 0.95rem;
		transition: color 0.15s;
	}
	.footer-nav a:hover {
		color: var(--gold);
	}

	.footer-contact {
		display: flex;
		flex-direction: column;
		gap: 0.3rem;
	}
	.footer-contact a {
		color: var(--cream-dark);
		text-decoration: none;
		font-size: 0.95rem;
		transition: color 0.15s;
	}
	.footer-contact a:hover {
		color: var(--gold);
	}

	.footer-bottom {
		text-align: center;
		padding: 1.25rem 1.5rem;
	}
	.footer-bottom p {
		margin: 0;
		font-size: 0.85rem;
		color: rgba(255,255,255,0.45);
	}

	@media (max-width: 600px) {
		.footer-inner {
			flex-direction: column;
			gap: 1.5rem;
		}
		.footer-nav {
			flex-direction: column;
			gap: 0.5rem;
		}
	}
</style>
