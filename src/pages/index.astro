import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

const services = [
	{
		icon: "üìÑ",
		title: "General Notarizations",
		desc: "Affidavits, acknowledgments, jurats, copy certifications, and more ‚Äî handled with precision and care.",
	},
	{
		icon: "üè†",
		title: "Real Estate Closings",
		desc: "Loan signings, deeds of trust, refinances, and purchase closings performed at your home, office, or preferred location.",
	},
	{
		icon: "‚öñÔ∏è",
		title: "Legal Documents",
		desc: "Powers of attorney, living wills, trust documents, and other legal paperwork notarized with attention to detail.",
	},
	{
		icon: "üöó",
		title: "Mobile Notary",
		desc: "Can't come to us? We come to you. Mobile services available throughout the greater 731 area.",
	},
	{
		icon: "üïê",
		title: "After-Hours & Weekends",
		desc: "Life doesn't keep office hours. Evening and weekend appointments available by request.",
	},
	{
		icon: "‚úçÔ∏è",
		title: "Loan Signing Agent",
		desc: "Certified and experienced loan signing agent, ensuring smooth, error-free mortgage and refinance closings.",
	},
];
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} image="/assets/hero-bg.jpg" />
	</head>
	<body>
		<Header />
		<main>

			<!-- ‚îÄ‚îÄ Hero ‚îÄ‚îÄ -->
			<section class="hero">
				<div class="hero-overlay"></div>
				<div class="container hero-content">
					<p class="hero-eyebrow">Serving the 731 Area</p>
					<h1>Exemplary loan signing company dedicated
                    to precision and client satisfaction</h1>
					<p class="hero-sub">
						Mobile notary and loan signing services by Mallory ‚Äî convenient,
						thorough, and professional.
					</p>
					<div class="hero-actions">
						<a href="/contact" class="btn btn-gold">Schedule an Appointment</a>
						<a href="/why-mallory" class="btn btn-outline">Why Mallory?</a>
					</div>
				</div>
			</section>

			<!-- ‚îÄ‚îÄ Trust Bar ‚îÄ‚îÄ -->
			<section class="trust-bar">
				<div class="container trust-bar-inner">
					<div class="trust-item">
						<span class="trust-icon">üèÖ</span>
						<span>Certified Notary Public</span>
					</div>
					<div class="trust-item">
						<span class="trust-icon">üìç</span>
						<span>Mobile &amp; On-Location</span>
					</div>
					<div class="trust-item">
						<span class="trust-icon">‚è∞</span>
						<span>Flexible Scheduling</span>
					</div>
				</div>
			</section>

			<!-- ‚îÄ‚îÄ Services ‚îÄ‚îÄ -->
			<section class="services-section" id="services">
				<div class="container">
					<h2 class="section-title">Our Services</h2>
					<hr class="gold-divider" />
					<p class="section-subtitle">
						From everyday notarizations to complex real estate closings, we handle it all.
					</p>
					<div class="services-grid">
						{services.map((s) => (
							<article class="service-card">
								<div class="service-icon">{s.icon}</div>
								<h3>{s.title}</h3>
								<p>{s.desc}</p>
							</article>
						))}
					</div>
				</div>
			</section>

			<!-- ‚îÄ‚îÄ CTA / Contact Banner ‚îÄ‚îÄ -->
			<section class="cta-band">
				<div class="container cta-inner">
					<div class="cta-text">
						<h2>Ready to Get Started?</h2>
						<p>
							Book an appointment today ‚Äî in person, mobile, or after hours.
							Quick turnaround and friendly service every time.
						</p>
					</div>
					<div class="cta-actions">
						<a href="/contact" class="btn btn-gold">Book Appointment</a>
						<!-- TODO: Replace with actual business phone number before going live -->
						<a href="tel:+17319991234" class="btn btn-white">(731) 999-1234</a>
					</div>
				</div>
			</section>

		</main>
		<Footer />
	</body>
</html>

<style>
	/* ‚îÄ‚îÄ Hero ‚îÄ‚îÄ */
	.hero {
		position: relative;
		min-height: 520px;
		display: flex;
		align-items: center;
		background: url('/assets/hero-bg.jpg') center/cover no-repeat,
		            url('/assets/hero-bg.svg') center/cover no-repeat,
		            var(--black);
	}
	.hero-overlay {
		position: absolute;
		inset: 0;
		background: rgba(10, 8, 4, 0.72);
	}
	.hero-content {
		position: relative;
		z-index: 1;
		padding-top: 5rem;
		padding-bottom: 5rem;
		max-width: 680px;
	}
	.hero-eyebrow {
		color: var(--gold);
		font-weight: 700;
		font-size: 0.9rem;
		letter-spacing: 0.12em;
		text-transform: uppercase;
		margin-bottom: 0.75rem;
	}
	.hero h1 {
		color: var(--white);
		margin-bottom: 1.25rem;
		line-height: 1.15;
	}
	.hero-sub {
		color: rgba(255,255,255,0.82);
		font-size: 1.15rem;
		margin-bottom: 2rem;
		max-width: 500px;
	}
	.hero-actions {
		display: flex;
		flex-wrap: wrap;
		gap: 1rem;
	}

	/* ‚îÄ‚îÄ Trust Bar ‚îÄ‚îÄ */
	.trust-bar {
		background: var(--black-soft);
		border-bottom: 2px solid var(--gold);
	}
	.trust-bar-inner {
		display: flex;
		flex-wrap: wrap;
		justify-content: center;
		gap: 0;
	}
	.trust-item {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		color: var(--cream);
		padding: 1rem 2rem;
		font-size: 0.95rem;
		font-weight: 600;
		border-right: 1px solid rgba(255,255,255,0.1);
	}
	.trust-item:last-child { border-right: none; }
	.trust-icon { font-size: 1.2rem; }

	/* ‚îÄ‚îÄ Services ‚îÄ‚îÄ */
	.services-section {
		padding: var(--section-padding);
		background: var(--cream);
	}
	.services-grid {
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
		gap: 1.75rem;
	}
	.service-card {
		background: var(--white);
		border-radius: 10px;
		padding: 2rem 1.75rem;
		box-shadow: var(--card-shadow);
		border-top: 3px solid var(--gold);
		transition: box-shadow 0.2s, transform 0.2s;
	}
	.service-card:hover {
		box-shadow: var(--card-shadow-hover);
		transform: translateY(-3px);
	}
	.service-icon {
		font-size: 2rem;
		margin-bottom: 0.75rem;
	}
	.service-card h3 {
		font-size: 1.15rem;
		color: var(--black);
		margin-bottom: 0.5rem;
	}
	.service-card p {
		color: var(--text-muted);
		font-size: 0.97rem;
		margin: 0;
		line-height: 1.6;
	}

	/* ‚îÄ‚îÄ CTA Band ‚îÄ‚îÄ */
	.cta-band {
		background: var(--black);
		background-image: linear-gradient(135deg, #1a1a1a 60%, #2a1f05);
		padding: var(--section-padding);
		border-top: 3px solid var(--gold);
	}
	.cta-inner {
		display: flex;
		flex-wrap: wrap;
		align-items: center;
		justify-content: space-between;
		gap: 2rem;
	}
	.cta-text h2 {
		color: var(--gold);
		margin-bottom: 0.5rem;
	}
	.cta-text p {
		color: rgba(255,255,255,0.78);
		max-width: 520px;
		margin: 0;
		font-size: 1.05rem;
	}
	.cta-actions {
		display: flex;
		flex-wrap: wrap;
		gap: 1rem;
		flex-shrink: 0;
	}

	@media (max-width: 720px) {
		.hero { min-height: 400px; }
		.trust-item { padding: 0.75rem 1rem; font-size: 0.85rem; }
		.cta-inner { flex-direction: column; }
		.cta-actions { width: 100%; }
		.cta-actions .btn { flex: 1; text-align: center; }
	}
</style>
