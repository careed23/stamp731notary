---
import BaseLayout from '../layouts/BaseLayout.astro';
import { SITE_TITLE } from '../consts';

const whyMalloryItems = [
  {
    title: "Extension of your Company",
    body: "We understand that we are an extension of your company and represent and answer all queries of signers in a professional capacity.",
    icon: "ü§ù",
  },
  {
    title: "Certified, Screened and Insured",
    body: "I have undertaken NNA certifications, LSS certifications, and we are background screened and E&O insured.",
    icon: "‚úÖ",
  },
  {
    title: "Same-Day Delivery",
    body: "We understand the need for same-day delivery and FedEx the documents before the cutoff time.",
    icon: "üì¶",
  },
  {
    title: "Punctual & Professional Communication",
    body: "We arrive on-time every closing and keep communications open and responsive. Signers are reminded about appointments via our modern tech workflow.",
    icon: "‚è∞",
  },
  {
    title: "Scanbacks",
    body: "We offer scanback services, ensuring swift document processing and client satisfaction. This streamlined approach enhances efficiency and peace of mind.",
    icon: "üìÑ",
  },
  {
    title: "Responsive Communication",
    body: "We understand the importance of ensuring everything is signed to avoid funding issues, and we stay in open communication to quickly resolve any issues.",
    icon: "üí¨",
  },
];
---

<BaseLayout
  title={`About | ${SITE_TITLE}`}
  description="Learn why Mallory at Stamp 731 Notary is the premier loan signing agent ‚Äî NNA-certified, background screened, E&O insured, and dedicated to same-day delivery."
>

  <!-- Page header -->
  <section class="bg-[#1a1a1a] py-24 px-6 text-white text-center">
    <div class="max-w-2xl mx-auto">
      <p class="section-label mb-4">Our Story</p>
      <h1 class="font-serif text-4xl md:text-5xl font-normal mb-4">Why Mallory</h1>
      <div class="gold-rule"></div>
    </div>
  </section>

  <!-- Headshot + intro -->
  <section class="bg-[#f8f4ed] py-20 px-6">
    <div class="max-w-5xl mx-auto flex flex-col md:flex-row items-center gap-12">
      <!-- Headshot -->
      <div class="flex-shrink-0">
        <div
          class="w-56 h-56 md:w-72 md:h-72 rounded-full overflow-hidden border-4 border-[#c8a951] bg-[#ede8df] flex items-center justify-center"
        >
          <img
            src="/images/headshot.png"
            alt="Mallory ‚Äî Stamp 731 Notary"
            width="288"
            height="288"
            class="w-full h-full object-cover"
            onerror="this.style.display='none'; this.parentElement.innerHTML='<span class=\'text-6xl\'>üë§</span>'"
          />
        </div>
      </div>

      <!-- Intro copy -->
      <div>
        <p class="section-label mb-3">About Mallory</p>
        <h2 class="font-serif text-3xl text-[#1a1a1a] mb-4">
          Your Trusted Notary Signing Agent
        </h2>
        <div class="w-12 h-0.5 bg-[#c8a951] mb-6"></div>
        <p class="text-gray-700 leading-relaxed mb-4">
          I represent you at the closing table, going above and beyond for our clients.
          Here are some of our unique qualities that set Stamp 731 Notary apart.
        </p>
        <p class="text-gray-700 leading-relaxed">
          With NNA and LSS certifications, full background screening, and E&amp;O insurance,
          I bring professionalism and reliability to every single closing.
        </p>
      </div>
    </div>
  </section>

  <!-- Why Mallory grid -->
  <section class="bg-white py-20 px-6">
    <div class="max-w-6xl mx-auto">
      <div class="text-center mb-14">
        <p class="section-label">What Sets Us Apart</p>
        <h2 class="font-serif text-3xl md:text-4xl text-[#1a1a1a] mt-2 mb-4">
          Our Unique Qualities
        </h2>
        <div class="gold-rule"></div>
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
        {whyMalloryItems.map((item) => (
          <div class="bg-[#f8f4ed] border border-[#ede8df] p-8 card-lift">
            <div class="text-3xl mb-4">{item.icon}</div>
            <h3 class="font-serif text-xl text-[#1a1a1a] mb-3">{item.title}</h3>
            <p class="text-gray-600 text-sm leading-relaxed">{item.body}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA banner -->
  <section class="bg-[#1a1a1a] py-20 px-6 text-white text-center">
    <div class="max-w-xl mx-auto">
      <h2 class="font-serif text-3xl mb-4">Ready to Schedule a Signing?</h2>
      <div class="gold-rule"></div>
      <p class="text-gray-300 mt-4 mb-8">
        Reach out and let's discuss how Stamp 731 Notary can support your team.
      </p>
      <a
        href="/contact"
        class="inline-block border-2 border-[#c8a951] text-[#c8a951] font-sans font-semibold text-sm tracking-widest uppercase px-8 py-4 hover:bg-[#c8a951] hover:text-[#1a1a1a] transition-colors no-underline"
      >
        Contact Us
      </a>
    </div>
  </section>

</BaseLayout>

